<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalculatorApp.MainPage"
             Shell.BackgroundColor="LightBlue"
             Shell.ForegroundColor="Black">
        

    <ContentPage.ToolbarItems>
        <ToolbarItem Order="Secondary" Text="History" />
        <ToolbarItem Order="Secondary" Text="Choose Theme" />
        <ToolbarItem Order="Secondary" Text="Policies" />
        <ToolbarItem Order="Secondary" Text="Send FeedBack" />
        <ToolbarItem Order="Secondary" Text="Help" />
    </ContentPage.ToolbarItems>
    
    <ContentPage.Resources>
        <Style x:Key="BaseCalculatorButtonStyle"
               TargetType="Button">
            <Setter Property="WidthRequest"
                    Value="80" />
            <Setter Property="HeightRequest"
                    Value="80" />
            <Setter Property="CornerRadius"
                     Value="40" />
            <Setter Property="TextColor"
                    Value="Black" />
             <Setter Property="FontSize"
                    Value="32" />
            <Setter Property="FontAttributes"
                      Value="Bold" />
            <Setter Property="Command"
                      Value="{Binding HandleButtonPressCommand}" />
            <Setter Property="CommandParameter"
                      Value="{Binding Source={RelativeSource Self}, Path=Text}" />
        </Style>

        <Style x:Key="NumberButtonStyle"
               TargetType="Button"
               BasedOn="{StaticResource BaseCalculatorButtonStyle}">
            <Setter Property="BackgroundColor"
                    Value="Gray">
                
            </Setter>
        </Style>
        
        <Style x:Key="OperatorButtonStyle"
       TargetType="Button"
       BasedOn="{StaticResource BaseCalculatorButtonStyle}">
            <Setter Property="BackgroundColor"
            Value="AliceBlue">

            </Setter>
        </Style>
    </ContentPage.Resources>
    
    
    <Grid RowDefinitions="200, *">
        <Border StrokeShape="RoundRectangle 0 0 25 25" Background="LightBlue">
            <VerticalStackLayout>
                <Entry Text="{Binding ExpressionDisplay}"
                       HorizontalTextAlignment="End"
                       FontSize="75">
                </Entry>
                <Label Text="{Binding ResultDisplay}" 
                       HorizontalTextAlignment="End"
                       FontSize="50">
                </Label>
            </VerticalStackLayout>
        </Border>

        <Grid Grid.Row="1"
              RowDefinitions="*,*,*,*,*"
              ColumnDefinitions="*,*,*,*">
            <Button Grid.Row="0"
                    Grid.Column="0"
                    Style="{StaticResource OperatorButtonStyle}"
                    Text="AC"
                    />
            <Button Grid.Row="0"
                    Grid.Column="1"
                    Style="{StaticResource OperatorButtonStyle}"
                    Text="(   )"
                    />
            <Button Grid.Row="0"
                    Grid.Column="2"
                    Style="{StaticResource OperatorButtonStyle}"
                    Text="%"
                    />
            <Button Grid.Row="0"
                    Grid.Column="3"
                    Style="{StaticResource OperatorButtonStyle}"
                    Text="/"
                    />
            <!-- ROW 2 -->

            <Button Grid.Row="1"
                    Grid.Column="0"
                    Style="{StaticResource OperatorButtonStyle}"
                    Text="7"
                    />
            <Button Grid.Row="1"
                    Grid.Column="1"
                    Style="{StaticResource OperatorButtonStyle}"
                    Text="8"
                    />
            <Button Grid.Row="1"
                    Grid.Column="2"
                    Style="{StaticResource OperatorButtonStyle}"
                    Text="9"
                    />
            <Button Grid.Row="1"
                    Grid.Column="3"
                    Style="{StaticResource OperatorButtonStyle}"
                    Text="x"
                    />
               <!--ROW 3-->
            <Button Grid.Row="2"
                    Grid.Column="0"
                    Style="{StaticResource OperatorButtonStyle}"
                    Text="4"
                    />
            <Button Grid.Row="2"
                    Grid.Column="1"
                    Style="{StaticResource OperatorButtonStyle}"
                    Text="5"
                    />
            <Button Grid.Row="2"
                    Grid.Column="2"
                    Style="{StaticResource OperatorButtonStyle}"
                    Text="6"
                    />
            <Button Grid.Row="2"
                    Grid.Column="3"
                    Style="{StaticResource OperatorButtonStyle}"
                    Text="-"
                    />
            <!--ROW4-->
            <Button Grid.Row="3"
                    Grid.Column="0"
                    Style="{StaticResource OperatorButtonStyle}"
                    Text="1"
                    />
            <Button Grid.Row="3"
                    Grid.Column="1"
                    Style="{StaticResource OperatorButtonStyle}"
                    Text="2"
                    />
            <Button Grid.Row="3"
                    Grid.Column="2"
                    Style="{StaticResource OperatorButtonStyle}"
                    Text="3"
                    />
            <Button Grid.Row="3"
                    Grid.Column="3"
                    Style="{StaticResource OperatorButtonStyle}"
                    Text="+"
                    />
            <!--ROW5-->
            <Button Grid.Row="4"
                    Grid.Column="0"
                    Style="{StaticResource OperatorButtonStyle}"
                    Text="0"
                    />
            <Button Grid.Row="4"
                    Grid.Column="1"
                    Style="{StaticResource OperatorButtonStyle}"
                    Text="."
                    />
            <Button Grid.Row="4"
                    Grid.Column="2"
                    Style="{StaticResource OperatorButtonStyle}"
                    Text="DE"
                    />
            <Button Grid.Row="4"
                    Grid.Column="3"
                    Style="{StaticResource OperatorButtonStyle}"
                    Text="="
                    />
        </Grid>
    </Grid>


</ContentPage>
